{
  "name": "sap-capire-mail-app",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^1",
    "@sap/cds": "^8",
    "@sap/cds-odata-v2-adapter-proxy": "^1.9.21",
    "@sap/xsenv": "^5.4.0",
    "@sap/xssec": "^4",
    "@sendgrid/mail": "^8.1.4",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "express": "^4",
    "node-fetch": "^2.7.0",
    "node-jose": "^2.2.0",
    "twilio": "^5.3.7"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.6",
    "@cap-js/sqlite": "^1.7.6",
    "@sap/cds-dk": "^8"
  },
  "scripts": {
    "start": "cds-serve",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "build:hana": "cds build --for hana",
    "deploy:cf": "mbt build && cf deploy mta_archives/sap-capire-mail-app_1.0.0.mtar",
    "deploy:local": "cds deploy --to sqlite",
    "deploy:hana": "cds deploy --to hana",
    "srv:hybrid": "cds watch --profile hybrid --port 4004",
    "srv:local": "cds watch --port 4004",
    "undeploy": "cf undeploy epmprfscrcapapp --delete-services --delete-service-keys --delete-service-brokers",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "requires": {
      "[production]": {
        "db": {
          "kind": "hana",
          "model": "srv/*",
          "deploy-format": "hdbtable"
        },
        "auth": "xsuaa"
      },
      "[hybrid]": {
        "db": {
          "kind": "hana",
          "model": "srv/*"
        },
        "auth": "xsuaa"
      },
      "[development]": {
        "db": {
          "kind": "sqlite",
          "model": "srv/*"
        }
      }
    },
    "sql": {
      "native_hana_associations": false
    }
  },
  "cov2ap": {
    "plugin": true
  }
}
